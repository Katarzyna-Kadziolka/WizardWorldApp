@inherits LayoutComponentBase


<MudThemeProvider/>

<MudLayout>
    <MudAppBar Color="Color.Info" Elevation="1">
        <MudLink Href="/" Underline="Underline.None">
            <MudText Typo="Typo.h5" Class="ml-3" Style="@($"color:{Colors.Blue.Lighten5};")">Wizard World</MudText>
        </MudLink>
        <MudSpacer/>
        <MudLink Href="/Feedback" Underline="Underline.None">
            <MudText Typo="Typo.subtitle1" Class="ml-3" Style="@($"color:{Colors.Blue.Lighten5};")">Leave us feedback!</MudText>
        </MudLink>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

